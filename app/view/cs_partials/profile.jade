section.content(ng-controller="profileCtrl",ng-init="init()")
    .ibox.float-e-margins
      .ibox-title
        h5 修改个人信息
      .ibox-content
        .row
          .col-sm-6.b-r
            form(role='form')
              .form-group
                  label 昵称
                  input.form-control(ng-model='user.nickname', placeholder='昵称')
              .form-group
                  label 密码
                  input.form-control(ng-model='user.pass', placeholder='密码')
              .form-group
                  .btn.btn-primary(data-toggle='modal',ng-click="updateUser();") 提交
          .col-sm-6